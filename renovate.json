{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignorePresets": [
    "group:monorepos",
    "group:recommended"
  ],
  "schedule": [
    "every weekend"
  ],
  "assignees": [
    "scylladb/qa-maintainers"
  ],
  "reviewers": [
    "scylladb/qa-maintainers"
  ],
  "labels": [
    "backport/none",
    "renovate",
    "dependencies"
  ],
  "enabledManagers": [
    "pep621",
    "github-actions",
    "helm-values",
    "custom.regex"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Track scylla-doctor versions from GitHub tags",
      "fileMatch": [
        "^defaults/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "scylla_doctor_version:\\s*[\"'](?<currentValue>[\\d.]+)[\"']"
      ],
      "depNameTemplate": "scylladb/scylla-doctor",
      "datasourceTemplate": "github-tags",
      "extractVersionTemplate": "^scylla-doctor-v(?<version>.+)$",
      "versioningTemplate": "semver-coerced"
    }
  ],
  "packageRules": [
    {
      "groupName": "All pip dependencies",
      "matchManagers": ["pep621"],
      "packageNames": ["!scylla-driver"],
      "enabled": true
    },
    {
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackageNames": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchManagers": [
        "pep621"
      ],
      "enabled": false,
      "addLabels": [
        "New Hydra Version"
      ]
    },
    {
      "matchPackageNames": [
        "scylla-driver"
      ],
      "matchManagers": [
        "pep621"
      ],
      "enabled": true,
      "addLabels": [
        "New Hydra Version"
      ]
    },
    {
      "matchPackageNames": [
        "scylladb/scylla-doctor"
      ],
      "matchManagers": [
        "custom.regex"
      ],
      "enabled": true,
      "addLabels": [
        "scylla-doctor"
      ]
    },
    {
      "groupName": null,
      "matchManagers": [
        "helm-values"
      ],
      "enabled": true,
      "addLabels": [
        "test-integration"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  "github-actions": {
    "enabled": true
  },
  "helm-values": {
    "fileMatch": [
      "(^|/)values_.*\\.ya?ml$"
    ]
  },
  "pip-compile": {
    "fileMatch": [
      "(^|/)requirements\\.txt$"
    ]
  }
}

{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "every weekend"
  ],
  "assignees": [
    "scylladb/qa-maintainers"
  ],
  "reviewers": [
    "scylladb/qa-maintainers"
  ],
  "labels": [
    "renovate",
    "dependencies",
    "New Hydra Version"
  ],
  "enabledManagers": [
    "pip-compile",
    "github-actions",
    "helm-values"
  ],
  "packageRules": [
    {
      "groupName": "All pip dependencies",
      "matchManagers": [
        "pip-compile"
      ],
      "matchPackageNames": [
        "!scylla-driver"
      ],
      "enabled": true
    },
    {
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackageNames": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "scylla-driver"
      ],
      "enabled": true
    },
    {
      "groupName": "All Helm values files",
      "matchManagers": [
        "helm-values"
      ],
      "enabled": true,
      "labels": [
        "renovate",
        "dependencies"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  "github-actions": {
    "enabled": true,
    "labels": [
      "renovate",
      "dependencies"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "(^|/)values_.*\\.ya?ml$"
    ]
  },
  "pip-compile": {
    "fileMatch": [
      "(^|/)requirements\\.txt$"
    ]
  }
}
